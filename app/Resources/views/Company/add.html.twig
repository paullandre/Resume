{% extends 'Main/main.html.twig' %}

{% block page %}        
<div class="content-wrapper" style="background-color: #222d32; border: 1px solid #444">
    {% block breadcrumbs %}
        {% include 'Main/breadcrumbs.html.twig' with {'page': 'Employment', 'color': 'lightgray'} %}
    {% endblock %}    
    
    <section class="content">        
        <div class="row">        
        </div>
        
        <div class="row">            
            <section class="col-lg-7 connectedSortable">                
                
                <div class="box box-info" style="border-top-color: darkSlateGray !important;">
                    <div class="box-header">
                        <i class="fa fa-users text-yellow"></i>

                        <h3 class="box-title">Add Experience</h3>
                        
                        <div class="pull-right box-tools">
                            <button type="button" class="btn btn-danger btn-sm" id="btnRemove" data-widget="remove" data-toggle="tooltip"
                                    title="Remove">
                                <i class="fa fa-times"></i></button>
                        </div>
                        
                    </div>
                    <div class="box-body">
                        <form action="#" method="post">
                            <div class="form-group">
                                <input type="text" id="txtName" class="form-control glowing-border" name="Name" placeholder="Company Name" style="border-width: 0.5px;">
                            </div>
                            <div class="form-group">
                                <input type="text" id="txtPosition" class="form-control glowing-border" name="Position" placeholder="Position" style="border-width: 0.5px;">
                            </div>
                            <div class="form-group">
                                <input type="text" id="txtAddress" class="form-control glowing-border" name="Address" placeholder="Complete Address" style="border-width: 0.5px;">
                            </div>                            
                            <div class="form-group">
                                <div class="input-group date">
                                    <div class="input-group-addon">
                                        <i class="fa fa-calendar"></i>
                                    </div>
                                    <input type="text" class="form-control pull-right" id="dateFrom" placeholder="Date From">
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="input-group date">
                                    <div class="input-group-addon">
                                        <i class="fa fa-calendar"></i>
                                    </div>
                                    <input type="text" class="form-control pull-right" id="dateTo" placeholder="Date To">
                                </div>
                            </div>
                            <div class="form-group">
							<input type="checkbox" name="current" value="current" 
                                style="vertical-align: text-bottom !important; margin: -2px 9px 0 3px !important; transform: scale(1.5);"/> 
                                <label class="test">                                    
                                    Current company?
                                </label>
                            </div>                            
                        </form>
                    </div>
                    <div class="box-footer clearfix">                                                
                        <button type="button" class="pull-right btn btn-default" id="cancelExp">Cancel
                            <i class="glyphicon glyphicon-remove text-red"></i>
                        </button>                        
                        <button type="button" class="pull-right btn btn-default" id="saveExp">Save
                            <i class="fa fa-arrow-circle-right text-green"></i>
                        </button>
                    </div>                    
                </div>
            </section>                
        </div>
    </section>      
</div>       
<style>    
    .test { line-height: 1em !important; }
    checkbox { vertical-align: text-bottom !important; }
    .glowing-border, #dateFrom, #dateTo
    {
        border: 0.5px solid #dadada !important;
    }

    .glowing-border:focus, #dateFrom:focus, #dateTo:focus
    {
        outline: none;
        border-color: #9ecaed;
        box-shadow: 0 0 10px darkSlateGray;
    }
</style>
<script src="{{ asset('AdminLTE/bower_components/jquery/dist/jquery.min.js') }}"></script>
<script>
	$(document).ready(function()
	{
		$("#btnRemove, #cancelExp").on("click", this, function()
		{
			window.location.replace( "{{ path('employment') }}" )
		});		
	});
</script>
{% endblock %}