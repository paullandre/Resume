{% extends 'Main/main.html.twig' %}
{% block page %}
<div class="content-wrapper" style="background-color: #222d32; border: 1px solid #37464f">
    {% block breadcrumbs %}
        {% include 'Main/breadcrumbs.html.twig' with {'page': 'Skills', 'color': 'blue'} %}
    {% endblock %}
    
    <!-- Main content -->
    <section class="content container-fluid">

        <!--------------------------
        | Your Page Content Here |
        -------------------------->        
        <div>            
            {% if skills is defined %}
                <div class="row" style="margin: 0 0 0 0.3em !important;">
                {% for language in skills %}
                
                    <div class="block">
                        <strong>{{ language.name }}</strong>
                        <hr>
                    </div>                
                    {% if loop.index % 8 == 0 %}
                        <br />                        
                    {% endif %}
                {% endfor %}
                </div>
            {% endif %}                                    
        </div>
        <div class="form-group col-lg-2">            
            <button type="button" class="btn btn-warning" style="margin: 1.5em 0 0 -0.3em;">
                <li style="list-style: none;">
                    <a href="{{ 'renderAddSkills' }} "><i></i> <span id="label_skills"style="">Add Skills</span></a>
                </li>
            </button>
        </div>
    </section>    
</div>
